<div class= "devise-wrapper">
	<div class = "event-form">
		<h2> Create a New Event </h2>
			<%= form_for @event do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name %>
			<br>

			<%= f.label :description %>
			<%= f.text_field :description %>
			<br>

			<%= f.label :location %>
			<%= f.text_field :location %>
			<br>

			<%= f.label :time %>
			<%= f.date_field :time %>
			<br>

			<%= f.hidden_field :user_id, value: current_user.id %>
			<br>

			<%= f.submit :submit %>
			<br>

			<% end %>
	</div>
</div>